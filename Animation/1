div{
    height: 100px;
    width: 100px;
    background-color: aquamarine;
    border: 2px solid black;
    position: absolute;
    top: 100px;
    left: 100px;
    animation-name: colorAnimate;
    animation-duration: 3s;  /*try 1s*/
    animation-timing-function: ease-in;
    animation-delay: 1s; /*try 0s*/
    animation-iteration-count: 5;
}
